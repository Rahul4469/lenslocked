{{template "header" .}}
<div class="px-6 bg-gray-300">
<h1 class="py-4 text-4xl semibold tracking-tight">FAQ Page</h1>
<ul class="grid grid-cols-1 gap-16">
    {{range .}}
        {{template "qa" .}}
    {{end}}
</ul>
</div>
{{template "footer"}}

{{define "qa"}}
<li class="border-t border-indigo-400 py-1 px-2">
    <span class="block text-lg text-gray-800 semibold"><b>{{.Question}}</b></span>
    <span class="block text-lg text-gray-500">{{.Answer}}</span>
</li>
{{end}}

